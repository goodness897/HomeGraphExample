<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minimore.homegraphexample.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:background="#fcfcfc">

        <com.minimore.homegraphexample.ConsumedGraphView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.minimore.homegraphexample.IntakeGraphView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.minimore.homegraphexample.HomeHrmGraphView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.minimore.homegraphexample.HomeBackgroundLineView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="#fcfcfc"
                android:fontFamily="sans-serif-light"
                android:text="12AM"
                android:textColor="#909090"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:background="#fcfcfc"
                android:fontFamily="sans-serif-light"
                android:text="5AM"
                android:textColor="#909090"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="67dp"
                android:background="#fcfcfc"
                android:fontFamily="sans-serif-light"
                android:text="11AM"
                android:textColor="#909090"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:background="#fcfcfc"
                android:fontFamily="sans-serif-light"
                android:text="17PM"
                android:textColor="#909090"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:background="#fcfcfc"
                android:fontFamily="sans-serif-light"
                android:text="23PM"
                android:textColor="#909090"
                android:textSize="10sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="38dp"
            android:layout_height="17dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_dr_home_balance_graph_heartrate_ic"
                android:text="심박"
                android:textColor="#4a4a4a"
                android:textSize="10sp" />

        </FrameLayout>

    </FrameLayout>


</FrameLayout>
